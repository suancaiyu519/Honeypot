FROM ubuntu:22.04

# 安装依赖
RUN apt-get update && apt-get install -y \
    gcc \
    make \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制源代码
COPY src/ ./src/
COPY lib/ ./lib/
COPY Makefile ./

# 编译
RUN make

# 创建日志目录
RUN mkdir -p /app/logs

# 暴露端口
EXPOSE 14550

# 启动命令
CMD ["./drone_proxy"]
